<section class="container main-content">
  <ol class="breadcrumb">
    <li>
      <a href="/ngo/<%= params[:bill_id] %>">Contas da Ong</a>
    </li>
    <li class="active">
      <%= I18n.t("reserve_bill") %>
    </li>
  </ol>


  <% flash.each do |key, value| %>
    <div data-alert class="alert-box <%= key %>">
      <%= value %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>


  <div class="row">
    <div class="span4 offset4">
      <h3 class="mb20"><%= I18n.t(:reserve_bill) %></h3>

      <form method="post" action="<%= @action %>">
        <%= erb "bills/_reserve_fields".to_sym %>
      </form>
    </div>
  </div>
</section>
