<section class="container main-content">

  <%= erb :errors, locals: { errors: errors } if errors.any? %>

  <% flash.each do |key, value| %>
    <div data-alert class="alert-box <%= key %>">
      <%= value %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>

  <div class="row">
    <div class="span4 offset4">
      <h3 class="mb20"><%= I18n.t(:new_bill) %></h3>

      <form method="post" action="/bill/create" enctype="multipart/form-data">
        <div class="form-group">
          <label for="issued_by"><%= I18n.t(:issued_by) %></label>
          <input name="issued_by" type="text" required autofocus class="form-control">
        </div>

        <div class="row">
          <div class="span2">
            <div class="form-group">
              <label for="due_date"><%= I18n.t(:due_date) %></label>
              <input id="datepicker" name="due_date" type="text" placeholder="<%= I18n.t(:date_format) %>" required class="form-control">
            </div>
          </div>

          <div class="span2">
            <div class="form-group">
              <label for="total_amount"><%= I18n.t(:total_amount) %></label>
              <div class="input-group">
                <span class="input-group-addon">R$</span>
                <input name="total_amount" type="number" min="0.1" step="any" required class="form-control">
              </div>
            </div>
          </div>
        </div>



        <div class="form-group">
          <label for="barcode"><%= I18n.t(:barcode) %></label>
          <input name="barcode" type="text" required class="form-control">
        </div>

        <div class="form-group">
          <label for="image"><%= I18n.t(:image) %></label>
          <input name="image" type="file">
        </div>

        <div class="text-right">
          <button type="submit" class="btn btn-success"><%= I18n.t(:create_bill) %></button>
        </div>
      </form>
    </div>
  </div>
</section>
